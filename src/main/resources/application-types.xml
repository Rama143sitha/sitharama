<?xml version='1.0' encoding='UTF-8'?>
<types:mule xmlns:types="http://www.mulesoft.org/schema/mule/types">
  <types:catalog>
    <types:type name="BookMetadataXML" format="xml">
      <types:example format="xml" element="book" location="examples/book.xml"/>
    </types:type>
    <types:type name="BookMetadataJSON" format="json">
      <types:shape format="weave" example="examples/book.json"><![CDATA[%dw 2.0

type BookMetadataJSON = {|
  item: {|
    "type": String, 
    price: Number {"typeId": "int"}, 
    properties: {|
      title: String, 
      author: Array<String>, 
      year: Number {"typeId": "int"}, 
      lungage: String
    |}
  |}
|} {"example": "{\\\"item\\\":{\\\"type\\\":\\\"book\\\",\\\"price\\\":30,\\\"properties\\\":{\\\"title\\\":\\\"Everyday Italian\\\",\\\"author\\\":[\\\"Giada De Laurentiis\\\"],\\\"year\\\":2005,\\\"lungage\\\":\\\"en\\\"}}}"}

]]></types:shape>
    </types:type>
    <types:type name="empCSV" format="csv">
      <types:shape format="weave" example="examples/employee.csv"><![CDATA[%dw 2.0

type empCSV = Array<{|  empID: String,   empName: String,   empEmail: String,   empStatus: String|}> {"isQuotedString": "false",
"header": "true",
"headerLineNumber": "0"}

]]></types:shape>
      <types:properties>
        <types:property name="headerLineNumber" value="0"/>
        <types:property name="header" value="true"/>
        <types:property name="isQuotedString" value="false"/>
      </types:properties>
    </types:type>
  </types:catalog>
  <types:enrichment select="#54a9138c-881f-44c9-a414-6df4782745bf">
    <types:processor-declaration>
      <types:input-event>
        <types:message>
          <types:payload type="BookMetadataXML"/>
        </types:message>
      </types:input-event>
      <types:output-event>
        <types:message>
          <types:payload type="BookMetadataJSON"/>
        </types:message>
      </types:output-event>
    </types:processor-declaration>
  </types:enrichment>
  <types:enrichment select="#b7c5c1a8-ec44-4f6f-b0be-07aa655a56e8">
    <types:processor-declaration>
      <types:input-event>
        <types:message>
          <types:payload type="BookMetadataJSON"/>
        </types:message>
      </types:input-event>
      <types:output-event>
        <types:message>
          <types:payload type="BookMetadataXML"/>
        </types:message>
      </types:output-event>
    </types:processor-declaration>
  </types:enrichment>
  <types:enrichment select="#3145b3ab-3d1b-43b2-8c0f-2893e3446b4f">
    <types:processor-declaration>
      <types:input-event>
        <types:message>
          <types:payload type="BookMetadataJSON"/>
        </types:message>
      </types:input-event>
      <types:output-event>
        <types:message>
          <types:payload type="empCSV"/>
        </types:message>
      </types:output-event>
    </types:processor-declaration>
  </types:enrichment>
</types:mule>